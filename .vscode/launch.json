{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Module",
            "type": "python",
            "request": "launch",
            "module": "advent_of_code",
            "justMyCode": true,
            "console": "integratedTerminal",
            "args": [
                "-y",
                "2022",
                "-r",
                "3"
            ]
        },
        {
            "name": "Python Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
